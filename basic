
👍//basic of pointer//

#include <iostream>

int main()

{
    int a=10;
    int *p;
    p=&a;
    std::cout<<*p<<std::endl<<a<<":"<<std::endl;
    printf("using pointer %d\n%d:",*p,a);
    return 0;
} 


👍👍//pointer to array//
#include <iostream>
using namespace std;

int main()

{
    int A[5]={2,3,4,5,6};
    int*p;
    p=A;//=&[0]//
    for(int i=0;i<5;i++)
    {
        cout<<p[i]<<endl;
    }
    return 0;
}
